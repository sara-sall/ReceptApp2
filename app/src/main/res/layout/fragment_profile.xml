<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    >

    <include
        android:id="@+id/toolbarID"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/linLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="50dp"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:text="AnvÃ¤ndare"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:text="e-mail"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/emailVerifiedID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:paddingStart="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linLay"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/myRecepesButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/myRecepes" />

        <Button
            android:id="@+id/passwordChangeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/changePasswordButton" />

        <Button
            android:id="@+id/logOutButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logga ut" />
    </LinearLayout>


</RelativeLayout>