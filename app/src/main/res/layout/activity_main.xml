<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.receptapp.MainActivity">
    <include
        android:id="@+id/toolbarID"
        layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/container_mainID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigationID"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="0dp" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigationID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        style="â€‹@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        app:itemIconTint="@drawable/bottom_navigation_colors"
        app:itemTextColor="@drawable/bottom_navigation_colors"
        android:background="@color/colorPrimary"/>

</RelativeLayout>
